{
    "name": "lucid-engine",
    "version": "0.0.1",
    "description": "Lucid MUD Engine",
    "engineStrict": true,
    "engines": {
        "node": ">= 10.1.0"
    },
    "license": "MIT",
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 4
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
