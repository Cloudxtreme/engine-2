{
  "name": "lucid-engine",
  "version": "0.1.0",
  "description": "Lucid MUD Engine",
  "engineStrict": true,
  "engines": {
    "node": ">= 8.9.0"
  },
  "jest": {
    "testMatch": [
      "**/*.spec.js",
      "*.spec.js"
    ],
    "rootDir": "src",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "license": "MIT",
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": false
    },
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "spread": true,
        "experimentalObjectRestSpread": true,
        "experimentalDecorators": true
      }
    }
  },
  "babel": {
    "plugins": [
      "transform-object-rest-spread",
      "transform-decorators"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "8.11"
          }
        }
      ],
      "latest"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.0.1",
    "babel-plugin-transform-decorators": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-latest": "^6.24.1",
    "dotenv": "^5.0.1",
    "eslint": "^4.19.1",
    "faker": "^4.1.0",
    "gulp": "^3.9.1",
    "gulp-ejs": "^3.1.2",
    "jest": "^23.0.0",
    "knex-cleaner": "^1.1.4",
    "precommit-hook": "^3.0.0",
    "regenerator-runtime": "^0.11.1",
    "rimraf": "~2.6.2",
    "yeoman-generator": "^2.0.4"
  },
  "dependencies": {
    "bcrypt": "^2.0.1",
    "bluebird": "^3.5.1",
    "bookshelf": "^0.13.3",
    "fastest-validator": "^0.6.6",
    "glob-fs": "^0.1.7",
    "gulp-rename": "^1.2.2",
    "handlebars": "^4.0.11",
    "immutable": "^3.8.2",
    "ioredis": "^3.2.2",
    "knex": "^0.14.6",
    "lodash": "^4.17.5",
    "moleculer": "^0.12.3",
    "mongoose": "^5.0.17",
    "nats": "^0.8.10",
    "object-path": "^0.11.4",
    "pg": "^7.4.1",
    "prettyjson": "^1.2.1",
    "redis": "^2.8.0",
    "root-require": "^0.3.1",
    "uuid": "^3.2.1",
    "validate.js": "^0.12.0"
  },
  "main": "./build/src/index.js",
  "scripts": {
    "test": "jest",
    "watch": "tsc -w -p tsconfig.release.json",
    "compile": "rm -rf build && tsc -p tsconfig.release.json",
    "build": "yarn test && yarn lint && yarn compile && yarn doc",
    "doc": "BUNDLE_GEMFILE=./docs/Gemfile bundle exec jekyll build -s ./docs -d ./docs/_site",
    "lint": "./node_modules/tslint/bin/tslint --project ./",
    "validate": "npm ls"
  },
  "pre-commit": [
    "lint"
  ]
}
