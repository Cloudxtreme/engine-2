{
  "name": "lucid-engine",
  "version": "0.0.1",
  "description": "Lucid MUD Engine",
  "engineStrict": true,
  "engines": {
    "node": ">= 8.9.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "rootDir": "src",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/bluebird-global": "^3.5.5",
    "@types/jest": "~22.2.2",
    "@types/node": "~8.10.0",
    "gulp": "^3.9.1",
    "gulp-ejs": "^3.1.2",
    "jest": "~22.4.3",
    "precommit-hook": "^3.0.0",
    "rimraf": "~2.6.2",
    "ts-jest": "~22.4.2",
    "tslint": "~5.9.1",
    "tslint-microsoft-contrib": "~5.0.3",
    "tsutils": "~2.24.0",
    "typedoc": "^0.11.1",
    "typedoc-markdown-theme": "^0.0.4",
    "typedoc-plugin-ensure-internal": "https://github.com/deap82/typedoc-plugin-ensure-internal",
    "typescript": "~2.8.1"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "fastest-validator": "^0.6.6",
    "gulp-rename": "^1.2.2",
    "ioredis": "^3.2.2",
    "lodash": "^4.17.5",
    "moleculer": "^0.12.1",
    "prettyjson": "^1.2.1",
    "root-require": "^0.3.1",
    "uuid": "^3.2.1",
    "validate-typescript": "^2.0.1"
  },
  "scripts": {
    "test": "jest",
    "watch": "tsc -w -p tsconfig.release.json",
    "build": "tsc -p tsconfig.release.json",
    "lint": "./node_modules/tslint/bin/tslint .",
    "validate": "npm ls"
  },
  "pre-commit": [
    "lint"
  ]
}
