    "devDependencies": {
        "@types/bluebird": "^3.5.20",
        "@types/jest": "^23.1.1",
        "@types/knex": "^0.14.14",
        "@types/node": "^10.3.4",
        "dotenv": "^6.0.0",
        "eslint": "^4.19.1",
        "eslint-plugin-jest": "^21.17.0",
        "faker": "^4.1.0",
        "jest": "^23.1.0",
        "prettier": "^1.13.5",
        "ts-jest": "^22.4.6",
        "tslint": "^5.10.0",
        "tslint-microsoft-contrib": "^5.0.3",
        "typescript": "^2.9.2"
    },
    "dependencies": {
        "bluebird": "^3.5.1",
        "knex": "^0.14.6",
        "moleculer": "^0.12.8",
        "ramda": "^0.25.0",
        "redis": "^2.8.0"
